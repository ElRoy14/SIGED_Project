<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesión</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap">
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="~/css/login.css" />
    <body background="img/cuadros.jpeg">
    </body>
</head>
<body>

    <div class="container">
        <div class="card">
            <div class="card-body card-body-overlay login-form">
                <h3 class="card-title text-center mb-4">Iniciar Sesión</h3>
                <img src="~/img/SIGED.jpeg" class="login-logo" alt="Logo">

                <form  asp-controller="Auth" asp-action="Login" method="post">
                    <div class="mb-3 custom-input">
                        <i class="fas fa-user input-icon"></i>
                        <input class="input-field" type="text" placeholder="Correo" required asp-for="Email" />
                    </div>
                    <div class="mb-3 custom-input">
                        <i class="fas fa-lock input-icon"></i>
                        <input class="input-field" type="password" placeholder="Contraseña" asp-for="UserPassword" required/>
                    </div>
                    <br>
                    <div class="mb-3">
                        <button class="btn btn-primary btn-block" type="submit">Iniciar Sesión</button>
                    </div>
                    <br>
                    <div class="custom-control custom-checkbox small">
                        <input type="checkbox" class="custom-control-input" id="chkMantenerSesion" asp-for="KeepSession">
                        <label class="custom-control-label" for="chkMantenerSesion">Mantener Sesión</label>
                    </div>
                    <br>
                    <div id="mensajeError" class="form-group">
                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="form-group">
                                <div class="alert alert-danger" role="alert">
                                    @ViewData["Mensaje"]
                                </div>
                            </div>
                        }
                    </div>
                    <p class="register-link text-center">¿No tienes una cuenta? <a href="@Url.Action("Registro","Login")">¡Regístrate!</a></p>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
