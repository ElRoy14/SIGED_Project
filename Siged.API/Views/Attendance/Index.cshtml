@model Siged.Domain.Attendance;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Registros de Asistencia</h1
   
    <!DOCTYPE html/>
    <html lang="es">
        <head>

